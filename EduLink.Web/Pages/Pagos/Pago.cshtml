@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EduLink ‚Äì Pago</title>

    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    
    <link rel="stylesheet" href="~/css/edulink-theme.css" asp-append-version="true" />
</head>

<body class="edulink-body-page">

    
    <nav class="navbar navbar-expand-lg bg-white shadow-sm py-2">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center gap-2" asp-page="/Index">
                <img src="~/imagenes/Logo.png" width="36" />
                <span class="fw-semibold fs-5">
                    <span class="edulink-brand-main">Edu</span><span class="edulink-brand-highlight">Link</span>
                </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPublic">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarPublic">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-page="/Index">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Explorar/Index">Explorar</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Historial/Index">Historial</a></li>
                    <li class="nav-item ms-2">
                        <a class="btn btn-primary px-3 py-1 rounded-pill" asp-page="/Auth/Login">Iniciar sesi√≥n</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>


    
    <div class="container py-5" style="font-family:'Inter', sans-serif; max-width: 1100px;">

        <h1 class="fw-bold mb-2 text-center">Completar pago</h1>
        <p class="text-muted text-center mb-4">
            Revisa los detalles y completa tu informaci√≥n de pago.
        </p>

        <div class="row g-4">

           
            <div class="col-lg-7">
                <div class="card shadow-sm p-4 edulink-auth-card">

                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="edulink-logo-circle"><span>üí°</span></div>
                        <div class="edulink-brand">
                            <span class="edulink-brand-main">Edu</span>
                            <span class="edulink-brand-highlight">Link</span>
                        </div>
                    </div>

                    <h4 class="fw-semibold mb-3">Datos de pago</h4>

                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nombre en tarjeta</label>
                            <input type="text" class="form-control" placeholder="Como aparece en la tarjeta" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">N√∫mero de tarjeta</label>
                            <input type="text" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Expiraci√≥n</label>
                                <input type="text" class="form-control" placeholder="MM/AA" maxlength="5" required />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">CVV</label>
                                <input type="text" class="form-control" placeholder="123" maxlength="3" required />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 mt-2">
                            Confirmar pago
                        </button>

                        <div class="text-center mt-3">
                            <a asp-page="/Reservar/Index" class="text-muted text-decoration-none">Cancelar y volver</a>
                        </div>

                    </form>
                </div>
            </div>


          
            <div class="col-lg-5">
                <div class="card shadow-sm p-4" style="background:#F9FAFB;">
                    <h5 class="fw-bold mb-3">Resumen de la reserva</h5>

                    <div class="mb-2 d-flex justify-content-between">
                        <span class="text-muted">Servicio:</span>
                        <span class="fw-semibold">Tutor√≠a de Matem√°ticas</span>
                    </div>

                    <div class="mb-2 d-flex justify-content-between">
                        <span class="text-muted">Duraci√≥n:</span>
                        <span class="fw-semibold">1 hora</span>
                    </div>

                    <div class="mb-2 d-flex justify-content-between">
                        <span class="text-muted">Modalidad:</span>
                        <span class="fw-semibold">Virtual</span>
                    </div>

                    <div class="mb-2 d-flex justify-content-between">
                        <span class="text-muted">Precio:</span>
                        <span class="fw-semibold text-primary">$12.00</span>
                    </div>

                    <div class="border-top pt-3 mt-2 d-flex justify-content-between">
                        <span class="fw-semibold">Total:</span>
                        <span class="fw-bold text-primary">$12.00</span>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
