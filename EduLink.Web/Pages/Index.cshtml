@page
@{
    ViewData["Title"] = "EduLink – Conecta tu aprendizaje";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --yellow: #FBBF24;
            --blue: #3B82F6;
            --white: #FFFFFF;
            --text-color: #1e293b;
        }
        * {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            background-color: var(--white);
            color: var(--text-color);
            line-height: 1.6;
        }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background-color: var(--white);
            border-bottom: 1px solid #e2e8f0;
        }
        .logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            font-size: 1.25rem;
            color: var(--blue);
        }
        .logo-icon {
            background-color: var(--yellow);
            width: 24px;
            height: 24px;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: black;
            font-weight: bold;
        }
        nav a {
            margin-left: 1.5rem;
            text-decoration: none;
            color: var(--blue);
            font-weight: 500;
        }
        main {
            padding: 3rem 2rem;
            text-align: center;
            max-width: 800px;
            margin: 0 auto;
        }
        h1 {
            font-size: 2.25rem;
            margin-bottom: 1rem;
            color: var(--blue);
        }
        p {
            font-size: 1.125rem;
            margin-bottom: 2rem;
            color: #475569;
        }
        .cta-button {
            background-color: var(--yellow);
            color: black;
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 6px;
            cursor: pointer;
            width: 200px;
            height: 48px; /* ≥ 44px para accesibilidad táctil */
        }
        footer {
            text-align: center;
            padding: 2rem;
            color: #64748b;
            font-size: 0.875rem;
        }
        /* Accesibilidad: foco visible */
        .cta-button:focus,
        nav a:focus {
            outline: 2px solid var(--blue);
            outline-offset: 2px;
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <span class="logo-icon">💡</span>
            EduLink
        </div>
        <nav>
            <a href="/Auth/Login">Iniciar sesión</a>
            <a href="/Auth/Register">Registrarse</a>
        </nav>
    </header>

    <main>
        <h1>Conecta tu aprendizaje</h1>
        <p>Encuentra clases, talleres y consultorías con profesionales certificados. Horarios flexibles, reservas seguras y pagos simples.</p>
        <button class="cta-button" onclick="location.href='/Servicios/Explorar'">Explorar servicios</button>
    </main>

    <footer>
        <p>EduLink © 2025 – Plataforma educativa segura y accesible</p>
    </footer>
</body>
</html>