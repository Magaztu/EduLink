@page
@model EduLink.Web.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Registro - EduLink";
}

@section Styles {
    <link rel="stylesheet" href="~/css/registro.css" />
}

<!-- NAV -->
<header class="navbar">
    <div class="links">
        <a asp-page="/Index">Home</a>
        <a asp-page="/Servicios/Explorar">Services</a>
        <a href="#">Contact</a>
        <a href="#">About</a>
    </div>

    <div class="logo">
        Edu<span>Link</span>
    </div>
</header>

<!-- FORMULARIO -->
<div class="register-box">
    <h2>Registro</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-message">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="input-group">
            <label>Nombre</label>
            <input asp-for="Nombre" type="text" required />
        </div>

        <div class="input-group">
            <label>Correo</label>
            <input asp-for="Correo" type="email" required />
        </div>

        <div class="input-group">
            <label>Contraseña</label>
            <input asp-for="Password" type="password" required />
        </div>

        <div class="checkbox">
            <input asp-for="AceptaTerminos" type="checkbox" required />
            <span>Acepto los términos y condiciones</span>
        </div>

        <button type="submit" class="btn">Registrarme</button>

        <p class="switch">¿Ya tienes una cuenta?
            <a asp-page="/Auth/Login">Inicia Sesión</a>
        </p>
    </form>
</div>
